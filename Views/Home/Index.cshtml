@model int
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Vue3SSRdotnet</title>
</head>
<body>
<main role="main">
    <div id="app"><button @@click="add">@Model</button></div>
</main>

<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script>
    const { createSSRApp } = Vue;
    createSSRApp({
        data() {
            return {
                count: @Model
            };
        },
        methods: {
            add() {
                this.count++;
            }
        },
        template: `<button @@click="add">{{count}}</button>`
    }).mount('#app');
</script>
</body>
</html>
